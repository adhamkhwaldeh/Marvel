<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoRest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GoRest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GoRest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GoRest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.GoRest.TitleText" parent="TextAppearance.AppCompat.Title">

    </style>

    <style name="Theme.GoRest.NormalText" parent="TextAppearance.AppCompat.Medium">

    </style>

    <style name="Theme.GoRest.TextInputLayout.ShapeAppearanceOverlay.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_sm</item>
    </style>

    <style name="Theme.GoRest.EditText.OutlinedRoundedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        <item name="hintTextAppearance">@style/AppTheme.EditText.HintTextAppearance</item>-->
        <item name="boxStrokeColor">@color/colorAccent</item>
        <!--        <item name="boxStrokeWidth">@dimen/separator</item>-->
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>

        <item name="shapeAppearanceOverlay">
            @style/Theme.GoRest.TextInputLayout.ShapeAppearanceOverlay.Rounded
        </item>
    </style>


</resources>